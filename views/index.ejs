<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="../" />

	<title> Best Price </title>
	<!-- Font Awesome Stylesheet -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=PT+Serif&display=swap" rel="stylesheet">
	<!--<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>
	<body>
		
	<%- include('./partials/header')  %> 

	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 5; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail">
						<figure class="product-box_image">
							<img src=<%= productos[i].imagen %>  alt="cafetera moulinex" class="img-fluid">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].nombre %> </h2>
							<p><%= productos[i].descripcion %> </p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		
		
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 5; i < 10; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail">
						<figure class="product-box_image">
							<img src=<%= productos[i].imagen %>  alt="cafetera moulinex" class="img-fluid">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].nombre %> </h2>
							<p><%= productos[i].descripcion %> </p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
	<!-- /Más comentados -->
	
	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>	
</html>