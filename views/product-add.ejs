<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %> 
<body>

	<!-- Header -->
	<% if (locals.user) { %>
		<%- include('partials/headerLogueado') %>
	<% } else{ %>
	<%- include('partials/headerDeslogueado') %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
			<form class="form-register" action="/products/add" method="post" enctype="multipart/form-data">
				<div>
					<label>Imagen:</label>
					<input type="file" name="foto"  required>
				</div>
				<div>
					<label>Nombre del Producto:</label>
					<input type="text" name="nombre" value="" required>
				</div>
				<div>
					<label>Descripcion:</label>
					<input type="text" name="descripcion" value="" required>
				</div>
				
				<div>
					<label>Valor:</label>
					<input type="number" name="valor" value="" required>
				</div>

				<div>
					<label>Tipo:</label>
					<input type="text" name="tipo" value="" required>
				</div>

				<button type="submit">Enviar</button>
			</form>

	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>

</html>