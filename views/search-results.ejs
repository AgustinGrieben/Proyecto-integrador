<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head')  %> 

<body>
	
	<!-- Header -->
	<% if (locals.user) { %>
		<%- include('partials/headerLogueado') %>
	<% } else{ %>
	<%- include('partials/headerDeslogueado') %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			

				<% for( let i = 0; i < productos.length; i++ ) { %>
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src= "<%= productos[i].image %>" alt="cafetera moulinex" class="img-fluid">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre %> </h2>
								<p><%= productos[i].descripcion %> </p>
								<p>Comentarios: <%= productos[i].comments.length %> </p>
								<a href="/users/profile/<%= productos[i].user.id%> "> <%= productos[i].user.username %>  </a>
							<img src="/images/users/<%= productos[i].user.image %> " alt="" class="fotoProfile"> 
							</article>
						</a>
					</section>
				</div>
				<% } %>
			


	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>

</html>