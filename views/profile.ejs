<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %> 

<body>
	<!-- Header -->
	<% if (locals.user) { %>
		<%- include('partials/headerLogueado') %>
	<% } else{ %>
	<%- include('partials/headerDeslogueado') %>
	<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= usuario.image %>"  alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.username %> 
				
						<a href="/users/profileedit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>Email: <%= usuario.email %> </li>
						<li> <%= usuario.products.length %> productos</li>
						<li>200 seguidores</li>
						<li> <%= usuario.comments.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->

			<% for( let i = 0; i < usuario.products.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products">
						<figure class="product-box_image">
							<img src=<%= usuario.products[i].image %>  alt="cafetera moulinex" class="img-fluid">
						</figure>
						<article class="product-box_data">
							<h2><%= usuario.products[i].nombre %> </h2>
							<p><%= usuario.products[i].descripcion %> </p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>


